doctype html
html
  head
    title User Profile
  body
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">

    block content
      h1 Send Message
      form(action=contact_action + "/conversations" method="POST")
        label(for="message") Message:
        textarea(id="message" name="MessageText" required)
        button(type="submit") Send

    if messages.length
    each el in messages
      p= messages
      .alert.alert-warning.mt-2
        h2= el.SenderID
        p= el.MessageText 



