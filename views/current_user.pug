doctype html
html
  head
    title User Profile
  body
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    h1 User Profile
    .alert.alert-danger.mt-2
      pre #{JSON.stringify(user, null, 2)}


      if contacts.length
    each el in contacts
      .alert.alert-dark.mt-6
        h3= el.ContactName

        a.btn.btn-outline-primary(href=`/api/contacts/${el.id}`) More
    else
      h6 You don't have any contacts!


    h1 Add contact
    form(action="/api/contacts" method="POST")
      label(for="ContactUsername") Contact Username:
      input(type="text", name="ContactUsername", id="ContactUsername", required)
      br
      label(for="ContactName") Contact Name (Optional):
      input(type="text", name="ContactName", id="ContactName")
      br
      button(type="submit") Add
